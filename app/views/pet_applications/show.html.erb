<main>

<h1>Application</h1>

<p>Name:
  <%= @app.name %></p>
<p>Address:
  <%= @app.street %>,
  <%= @app.city %>,
  <%= @app.state %>
  <%= @app.zip %></p>
<p>Reason for Application:
  <%= @app.reason %></p>
<p>Application ID:
  <%= @app.id %></p>

<h2>Pets</h2>
<% @app.pets.each do |pet| %>
  <p>Pet Name:
    <%= link_to pet.name, "/pets/#{pet.id}" %></p>
<% end %>

<h4>Application Status:
  <%= @app.status %></h4>
<br>
<% if @app.status == 'In Progress' %>
  <%= render partial: '/partials/petform' %>
<% end %>
</main>
